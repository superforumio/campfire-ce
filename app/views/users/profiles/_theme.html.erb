<fieldset data-controller="theme">
  <legend class="txt-small txt-muted">Appearance</legend>

  <div class="flex gap">
    <button type="button" class="btn flex-item-grow" data-action="theme#setLight" data-theme-target="lightButton" aria-selected="false">
      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.3em; height: 1.3em;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <circle cx="12" cy="12" r="5"/>
        <line x1="12" y1="1" x2="12" y2="3"/>
        <line x1="12" y1="21" x2="12" y2="23"/>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
        <line x1="1" y1="12" x2="3" y2="12"/>
        <line x1="21" y1="12" x2="23" y2="12"/>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
      </svg>
      Light
    </button>

    <button type="button" class="btn flex-item-grow" data-action="theme#setDark" data-theme-target="darkButton" aria-selected="false">
      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.3em; height: 1.3em;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
      </svg>
      Dark
    </button>

    <button type="button" class="btn flex-item-grow" data-action="theme#setAuto" data-theme-target="autoButton" aria-selected="false">
      <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.3em; height: 1.3em;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
        <line x1="8" y1="21" x2="16" y2="21"/>
        <line x1="12" y1="17" x2="12" y2="21"/>
      </svg>
      Auto
    </button>
  </div>
</fieldset>
