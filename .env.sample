# ============================================
# BRANDING CONFIGURATION
# ============================================
# These variables control how your community appears to users

# Application Identity
APP_NAME="Campfire Community Edition"
APP_SHORT_NAME="Campfire CE"
APP_DESCRIPTION="A community chat platform powered by Campfire-CE"
APP_HOST="chat.example.com"

# Contact & Support
SUPPORT_EMAIL="support@example.com"
MAILER_FROM_NAME="Campfire Community Edition"
MAILER_FROM_EMAIL="noreply@example.com"

# Visual Branding (PWA colors)
THEME_COLOR="#1d4ed8"
BACKGROUND_COLOR="#ffffff"

# Analytics (optional - for Plausible)
ANALYTICS_DOMAIN=

# Security - Frame ancestors for Content Security Policy
# Comma-separated list of allowed domains
CSP_FRAME_ANCESTORS=

# ============================================
# RAILS CORE CONFIGURATION
# ============================================

# Rails Master Key (from config/master.key or generate with: rails secret)
RAILS_MASTER_KEY=

# Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=

# ============================================
# NOTIFICATIONS
# ============================================

# VAPID keys for web push notifications
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Resend API key for sending emails
RESEND_API_KEY=

# ============================================
# OPTIONAL FEATURES
# ============================================

# Gumroad integration (for payments)
GUMROAD_ON=false
GUMROAD_ACCESS_TOKEN=
GUMROAD_PRODUCT_IDS=

# AWS/S3 (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Webhook secret (for bot integrations)
WEBHOOK_SECRET=

# Cookie domain (for session cookies)
# Leave blank for local development (localhost)
# Set to your domain for production (e.g., yourdomain.com)
COOKIE_DOMAIN=

# ============================================
# DEPLOYMENT INFO
# ============================================

APP_VERSION=1.0.0
GIT_REVISION=
