<% open_registration = Current.account.open_registration_value %>
<% join_url = join_now_path if open_registration %>
<div class="min-h-screen bg-white">

  <!-- Header Section -->
  <header class="py-6">
    <div class="container" style="display: flex; justify-content: flex-end; gap: 1rem;">
      <a href="/chat" class="btn btn-outline text-sm py-2 px-6">Sign In</a>
      <% if open_registration %>
        <a href="<%= join_url %>" class="btn btn-primary text-sm py-2 px-6">Join Now</a>
      <% end %>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container hero-content">
      <h1 class="hero-title">
        <%= BrandingConfig.app_name %>
      </h1>
      <p class="hero-subtitle">
        A community for creators and entrepreneurs making small bets
      </p>
      <% if open_registration %>
        <div class="hero-cta">
          <a href="<%= join_url %>" class="btn btn-primary btn-large">Get Started</a>
        </div>
      <% end %>
    </div>
  </section>

</div>
